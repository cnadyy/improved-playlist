rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    
    match /folders/{folderId} {
      allow read: if resource.data.public == true;
      allow read, write: if resource.data.owner == request.auth.uid;
    }
  }
}