{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "downlevelIteration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "@styled/typescript-styled-plugin"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@api/*": [
        "./src/api/*"
      ],
      "@css/*": [
        "./src/css/*"
      ],
      "@mock/*": [
        "./mock-data/*"
      ],
      "@fb/*": [
        "./src/api/firebase/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "build-files/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "build-files",
  ]
}
